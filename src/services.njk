<script>
  document.addEventListener('DOMContentLoaded', () => {
  const carousel = document.querySelector('.services-cards');
  const dotsContainer = document.getElementById('dots-wrapper');
  
  // Clear existing dots to prevent duplicates
  dotsContainer.innerHTML = '';

  const cards = carousel.querySelectorAll('.service-card');

  // Create dots dynamically
  cards.forEach((_, index) => {
    const dot = document.createElement('span');
    dot.addEventListener('click', () => {
      carousel.scrollTo({
        left: index * carousel.clientWidth * 0.93,
        behavior: 'smooth'
      });
      setActiveDot(index);
    });
    dotsContainer.appendChild(dot);
  });

  const dots = dotsContainer.querySelectorAll('span');
  if (dots[0]) dots[0].classList.add('active');

  function setActiveDot(index) {
    dots.forEach(dot => dot.classList.remove('active'));
    if (dots[index]) dots[index].classList.add('active');
  }

  // Calculate stride (card width + gap) safely
  function getStride() {
    const card = carousel.querySelector('.service-card');
    if (!card) return 0;
    
    // Get absolute card width
    const cardWidth = card.offsetWidth;
    
    // Get computed gap (fallback to 32px / 2rem if fails)
    const style = window.getComputedStyle(carousel);
    const gap = parseFloat(style.gap) || 32;
    
    return cardWidth + gap;
  }

  // Sync dots with scroll
  carousel.addEventListener('scroll', () => {
    const stride = getStride();
    if (stride < 1) return;
    
    const index = Math.round(carousel.scrollLeft / stride);
    setActiveDot(index);
  });

  // Auto scroll
  let autoScroll = setInterval(() => nextSlide(), 4000);

  function nextSlide() {
    const stride = getStride();
    if (stride < 1) return;
    
    const maxScroll = carousel.scrollWidth - carousel.clientWidth;
    
    // Check if we are close to the end (within 10px tolerance)
    if (carousel.scrollLeft >= maxScroll - 10) {
      carousel.scrollTo({ left: 0, behavior: 'smooth' });
    } else {
      carousel.scrollBy({ left: stride, behavior: 'smooth' });
    }
    
    // Note: The scroll listener will update the dots
  }

  carousel.addEventListener('mouseenter', () => clearInterval(autoScroll));
  carousel.addEventListener('mouseleave', () => {
    autoScroll = setInterval(() => nextSlide(), 4000);
  });
});
</script>
